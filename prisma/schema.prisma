generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
}


model Patient {
  id        Int          @id @default(autoincrement())
  nom       String
  prenom    String
  telephone String
  rendezVous RendezVous[]
}

model Prestation {
  id           Int          @id @default(autoincrement())
  nom          String
  description  String?
  dureeMinutes Int
  prix         Float
  rendezVous   RendezVous[]
}

model RendezVous {
  id           Int       @id @default(autoincrement())
  dateRdv      DateTime
  statut       String    @default("confirm√©")
  patientId    Int
  prestationId Int
  patient      Patient    @relation(fields: [patientId], references: [id])
  prestation   Prestation @relation(fields: [prestationId], references: [id])
}

model Disponibilite {
  id          Int      @id @default(autoincrement())
  jourSemaine Int
  heureDebut  String
  heureFin    String
  actif       Boolean  @default(true)
}

model Admin {
  id           Int      @id @default(autoincrement())
  email        String   @unique
  passwordHash String
  role         String   @default("admin")

}
